<p id="notice"><%= notice %></p>

<p>
  <strong>Description:</strong>
  <%= @post.desciption %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @post.image.url %>
</p>
<% unless @post.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'Cancel favorite', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'Make it a favorite', favorites_path(post_id: @post.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<p>List of Comments(Contents below are important)</p>

  <!-- Get an HTML id of this comments_area and update only the part of that div -->
  <div id="comments_area">
    <!-- Render to display the posted comment list on the blogs detail page -->
    <%= render partial: 'comments/index', locals: { comments: @comments, post: @post } %>
  </div>

  <!-- Render to display the comment field on the blogs detail page -->
  <%= render partial: 'comments/form', locals: { comment: @comment, post: @post } %>

<%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-warning' %> |
<%= link_to 'Back', posts_path, class: 'btn btn-warning' %>



